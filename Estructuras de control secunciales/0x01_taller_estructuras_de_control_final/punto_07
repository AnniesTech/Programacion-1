/*
 * Leer numeros hasta que el usuario ingrese 0 e imprimir el menor numero ingresado
 */
package leernumhasta0imprimirmenor;
import java.util.Scanner;
/**
 *
 * @author Amarie
 */
public class LeerNumHasta0ImprimirMenor {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner read = new Scanner(System.in);
        int num = 0;
        System.out.print("Ingrese un numero: ");
        num = read.nextInt();
        
        int menor = num;
        while(num !=0){
            System.out.print("Ingrese un numero: ");
            num = read.nextInt();
            if(menor > num && num !=0){
            menor = num;     
        }}
        System.out.println("El menor numero ingresado es: "+menor); 
    }
    
}
