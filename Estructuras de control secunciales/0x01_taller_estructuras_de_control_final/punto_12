/*
 * Leer hasta 0 luego imprimir la cantidad de pares e impares
*/

package leerhasta0imprimirparesyimpares;
import java.util.Scanner;
/**
 *
 * @author Amarie
 */
public class LeerHasta0ImprimirParesYImpares {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner leer=new Scanner(System.in);
        System.out.println("Ingrese un numero: ");
            int n=leer.nextInt();
            int impar=0;
            int contadorPares=0;
            int contadorImpares=0;
            while(n!=0){
                if(n%2!=0){
                impar=n;
                contadorImpares++;
                }else{
                    contadorPares++;
                }
                System.out.println("ingrese un numero");
                n=leer.nextInt();    }
            System.out.println("la cantidad de impares es de: "+contadorImpares);
            System.out.println("la cantidad de pares es de: "+contadorPares);
        }
    
}
